# OpenAI Configuration (required for smolagent-chat)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_API_VERSION=2024-02-15-preview

# Repository Configuration
# Choose one: REPO_URL (to clone from GitHub) or REPO_PATH (local directory)
REPO_URL=https://github.com/huggingface/transformers
# REPO_PATH=/path/to/your/local/repo

# GitHub Token (optional, for private repos or higher rate limits)
# GITHUB_TOKEN=your_github_token

# Agent Configuration
MAX_STEPS=5

# Weaviate Configuration (usually don't need to change these)
WEAVIATE_HOST=weaviate
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=50051

# MCP Server Configuration
PORT=4000
MCP_SERVER_URL=http://mcp-server:4000/mcp

# ========================================
# Alternative: Azure OpenAI Configuration
# ========================================
# Uncomment these lines to use Azure OpenAI instead
# OPENAI_API_KEY=your_azure_api_key
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/
# OPENAI_MODEL_NAME=gpt-4
# OPENAI_API_VERSION=2024-02-15-preview

# ========================================
# Alternative: Local vLLM Server
# ========================================
# Uncomment these lines to use a local vLLM server
# OPENAI_API_KEY=none
# OPENAI_BASE_URL=http://vllm:8000/v1
# OPENAI_MODEL_NAME=HuggingFaceTB/SmolLM3-3B
